{
"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
"contentVersion": "1.0.0.0",
"parameters": {
    "adminUserName": {
        "value": "centosuser"
    },
    "sshRSAPublicKey": { 
        "value": "ssh-rsa <YOUR ID_RSA.PUB HASH HERE"
    },
    "vmNamePrefix": {
        "value": "DVQuesta0"
    },
    "vmSize": {
        "value": "Standard_M64ms"
    },
    "numberOfInstances": {
        "value": 2
    },
    "virtualNetworkName": {
        "value": "DVQVNET"
    },
    "virtualNetworkResourceGroup": { 
        "value": "DVQVNETRG"
    },
    "subnetName": {
        "value": "Subnet1"
    },
    "commandToExecute": { 
        "value": "sh customScript.sh"
    }
  }
}